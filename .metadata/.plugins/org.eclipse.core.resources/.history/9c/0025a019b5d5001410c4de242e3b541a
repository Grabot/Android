		tile[16].setAttributes( water, available, false );
		tile[17].setAttributes( water, available, false );
		tile[18].setAttributes( water, available, false );
		tile[19].setAttributes( water, available, false );
		tile[20].setAttributes( grass, available, false );
		tile[21].setAttributes( grass, available, false );
		tile[22].setAttributes( grass, available, false );
		tile[23].setAttributes( grass, available, false );
		tile[24].setAttributes( grass, available, false );
		tile[25].setAttributes( grass, available, false );
		
		//row 2
		tile[26].setAttributes( iron, available, false );
		tile[27].setAttributes( iron, available, false );
		tile[28].setAttributes( iron, available, false );
		tile[29].setAttributes( iron, available, false );
		tile[30].setAttributes( iron, available, false );
		tile[31].setAttributes( iron, available, false );
