		tile[47].setAttributes( grass, available, false );
		tile[48].setAttributes( grass, available, false );
		tile[49].setAttributes( grass, available, false );
		tile[50].setAttributes( grass, available, false );
		
		//row 3
		tile[51].setAttributes( iron, available, false );
		tile[52].setAttributes( iron, available, false );
		tile[53].setAttributes( iron, available, false );
		tile[54].setAttributes( iron, available, false );
		tile[55].setAttributes( iron, available, false );
		tile[56].setAttributes( iron, available, false );
